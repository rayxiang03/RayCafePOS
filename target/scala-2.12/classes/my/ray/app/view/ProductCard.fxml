<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="my.ray.app.view.ProductCardController">
   <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#handleClose" prefHeight="25.0" prefWidth="45.0" text="Back">
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </Button>
    <ImageView fx:id="productImage" fitHeight="165.0" fitWidth="150" preserveRatio="true" />
    <Label fx:id="productName" prefHeight="17.0" prefWidth="84.0" text="sss">
      <VBox.margin>
         <Insets left="30.0" />
      </VBox.margin></Label>
    <Label fx:id="productPrice" prefHeight="17.0" prefWidth="52.0" text="price" />
   <Label fx:id="productDescription" prefHeight="17.0" prefWidth="147.0" text="Label" />
</VBox>
